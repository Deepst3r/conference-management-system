<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".view.roles.reviewer.EvaluatePaperExtendedFragment"
                                                   android:id="@+id/frameLayout5">

    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       app:cardElevation="5sp"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       android:layout_marginTop="16dp" android:layout_marginLeft="16dp"
                                                       android:layout_marginStart="16dp"
                                                       android:layout_marginRight="16dp"
                                                       android:layout_marginEnd="16dp"
                                                       android:layout_marginBottom="16dp">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                        android:text="Accept"
                        app:cornerRadius="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button_accept"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/button_see_paper"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/button_reject"
                        app:layout_constraintHorizontal_bias="0.5" app:backgroundTint="#4CAF50"/>

                <com.google.android.material.button.MaterialButton
                        android:text="Reject"
                        app:cornerRadius="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button_reject"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/button_see_paper"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/button_accept"
                        app:layout_constraintHorizontal_chainStyle="packed" app:backgroundTint="#F44336"/>
                <Button
                        android:text="See paper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button_see_paper"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/text_abstract"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                <TextView
                        android:text="Abstract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/text_abstract"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/text_paper"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"/>
                <TextView
                        android:text="Paper"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" android:id="@+id/text_paper"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>