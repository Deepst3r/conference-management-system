<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
>
    <EditText
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:inputType="textPersonName|textEmailAddress"

            android:id="@+id/edittext_username_login"
            android:hint="Username"
            style="@style/Widget.EditText.Primary"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/text_login" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="40dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:inputType="textPassword"
            android:id="@+id/edittext_password_login"
            android:hint="Password"
            style="@style/Widget.EditText.Primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_username_login"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/button_login" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"/>

    <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:id="@+id/text_login" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="61dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="175dp" android:layout_marginStart="175dp" android:layout_marginEnd="177dp"
            android:layout_marginRight="177dp" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="48sp" android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.013"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button_login" app:layout_constraintHorizontal_bias="0.0"
            style="@style/Widget.Button.Primary" android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginBottom="300dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>