<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SettingsActivity" android:scrollbarStyle="insideInset">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
        <EditText
                android:layout_width="0dp"
                android:ems="10"
                android:id="@+id/edittext_email_settigs" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="50dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:hint="E-mail"
                android:singleLine="false"
                android:inputType="textEmailAddress" app:layout_constraintTop_toBottomOf="@+id/textview_email_settings"
        />
        <TextView
                android:text="E-mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_email_settings"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/edittext_email_settigs" android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>